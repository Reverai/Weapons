@model Weapons.Models.Заявления

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Заявления</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Номер_заявления" />
            <div class="form-group">
                <label asp-for="Цель_приобретения_оружия" class="control-label"></label>
                <input asp-for="Цель_приобретения_оружия" class="form-control" />
                <span asp-validation-for="Цель_приобретения_оружия" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_гражданина" class="control-label"></label>
                <input asp-for="ID_гражданина" class="form-control" />
                <span asp-validation-for="ID_гражданина" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Фото" class="control-label"></label>
                <input asp-for="Фото" class="form-control" />
                <span asp-validation-for="Фото" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
